#include<iostream>
#include<fstream>
using namespace std;

int main(){

	ofstream arquivoS;
	arquivoS.open("copa america.txt");
	arquivoS<<"brasil campeao";
	arquivoS.close();
	
	ifstream arquivoE;
	string linha;
	arquivoE.open("copa america.txt");
		if(arquivoE.is_open()){
			while(getline(arquivoE, linha)){
				cout<<linha<<endl;
			}
			arquivoE.close();
		} else {
			cout<<"ERRO"<<endl;
		}
	return 0;
}
